<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Formularios.frmAnalisisContratos" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Title="titleAnalysisContract" 
    ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left"  Height="600" Width="720" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Name="gridSolicitudes" Margin="10" Grid.Row="0" >
                <ComboBox IsEnabled="True" x:Name="cmbTipoSolicitudes" SelectedValue="{Binding TipoSolicitudID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  HorizontalAlignment="Left" Margin="5,97,0,0" VerticalAlignment="Top" Width="312" Height="25" TabIndex="1"/>
                <ComboBox IsEnabled="True" x:Name="cmbCondicionSolicitudes" SelectedValue="{Binding CondicionID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Margin="336,97,0,0" VerticalAlignment="Top" Width="293" Height="25" TabIndex="2"/>
                <TextBox IsEnabled="True" x:Name="txtTiempo" Text="{Binding Tiempo, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Margin="5,157,0,0" VerticalAlignment="Top" Width="312" Height="25" TabIndex="3" />
                <TextBox IsEnabled="True" x:Name="txtMonto" Text="{Binding Monto, StringFormat=N2, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Margin="336,157,0,0" VerticalAlignment="Top" Width="292" Height="25" TabIndex="4" />

                <Separator Height="52" Margin="0,4,0,0" VerticalAlignment="Top"/>
                <TextBlock HorizontalAlignment="Left" Margin="0,4,0,0" TextWrapping="Wrap" Text="sectionA" FontWeight="Normal" FontSize="18" Foreground="{StaticResource BackgroundHeader}" VerticalAlignment="Top" Width="230"/>
                <TextBlock HorizontalAlignment="Left" Margin="336,72,0,0" TextWrapping="Wrap" Text="lblCondición" VerticalAlignment="Top" Width="94"/>
                <TextBlock HorizontalAlignment="Left" Margin="336,132,0,0" TextWrapping="Wrap" Text="lblMonto" VerticalAlignment="Top" Width="112"/>
                <TextBlock HorizontalAlignment="Left" Margin="5,132,0,0" TextWrapping="Wrap" Text="lblTiempo" VerticalAlignment="Top" Width="130"/>
                <TextBlock HorizontalAlignment="Left" Margin="5,72,0,0" TextWrapping="Wrap" Text="lblTipoSolicitud" VerticalAlignment="Top" Width="130"/>
                <TextBlock x:Name="lblContrato" Visibility="Collapsed" HorizontalAlignment="Left" TextAlignment="Right" Margin="402,61,0,0" FontSize="36" FontWeight="Bold" TextWrapping="Wrap" VerticalAlignment="Top" Width="227" Height="55"/>
            </Grid>

            <Grid Margin="10" Grid.Row="1" Name="gridContratos">
                <ComboBox x:Name="cmbTipoContratos" SelectedValue="{Binding TipoContratoID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  HorizontalAlignment="Left" Margin="216,88,0,0" VerticalAlignment="Top" Width="201" Height="25" TabIndex="52"/>
                <TextBox  x:Name="txtInteres"  Text="{Binding Interes, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Height="25" Margin="0,148,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="206" TabIndex="53"/>
                <TextBox  x:Name="txtComision" Text="{Binding Comision, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Height="25" Margin="215,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" TabIndex="54"/>
                <TextBox x:Name="txtMontoPrestamo"  HorizontalAlignment="Left" Height="25" Margin="430,148,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" TabIndex="55"/>

                <TextBlock HorizontalAlignment="Left" Margin="2,182,0,0" TextWrapping="Wrap" Text="lblShowCommission" VerticalAlignment="Top" Width="206"/>
                <RadioButton x:Name="rbComision_Si" Content="Si" HorizontalAlignment="Left" Margin="10,207,0,0" VerticalAlignment="Top" TabIndex="62" GroupName="Comision" />
                <RadioButton x:Name="rbComision_No" Content="No" HorizontalAlignment="Left" Margin="63,208,0,0" VerticalAlignment="Top" IsChecked="true" TabIndex="63" GroupName="Comision" />

                <TextBlock HorizontalAlignment="Left" Margin="0,63,0,0" TextWrapping="Wrap" Text="lblDateOfContract" VerticalAlignment="Top" Width="158"/>
                <TextBlock HorizontalAlignment="Left" Margin="215,63,0,0" TextWrapping="Wrap" Text="lblTypeOfContract" VerticalAlignment="Top" Width="130"/>
                <TextBlock x:Name="lblCuota" HorizontalAlignment="Left" TextAlignment="Right" Margin="420,85,0,0" FontSize="26" FontWeight="Bold" TextWrapping="Wrap" Text="RD$0.00" VerticalAlignment="Top" Width="210"/>
                <TextBlock HorizontalAlignment="Left" Margin="0,123,0,0" TextWrapping="Wrap" Text="lblInterestRate" VerticalAlignment="Top" Width="153"/>
                <TextBlock  Margin="219,123,0,0" TextWrapping="Wrap" Text="lblRateCommission" VerticalAlignment="Top" HorizontalAlignment="Left" Width="201"/>
                <TextBlock HorizontalAlignment="Left" Margin="430,123,0,0" TextWrapping="Wrap" Text="lblMonto" VerticalAlignment="Top" Width="148"/>



                <TextBlock HorizontalAlignment="Left" Margin="0,11,0,0" TextWrapping="Wrap" Text="sectionF" FontWeight="Normal" FontSize="18" Foreground="{StaticResource ResourceKey=BackgroundHeader}" VerticalAlignment="Top" Width="594"/>

                <DatePicker x:Name="txtFechaContrato" SelectedDate="{Binding Path=Fecha, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Height="25" Margin="0,89,0,0" VerticalAlignment="Top" Width="207" TabIndex="51"/>
                <Separator Height="52" Margin="0,11,0,0" VerticalAlignment="Top"/>
            </Grid>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1">
            <Button Height="55" Width="55" Margin="0" Name="btnAceptar"  IsDefault="False" TabIndex="70">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False" TabIndex="71">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
