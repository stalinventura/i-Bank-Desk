<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Formularios.frmRelacionIngresosGetByFecha" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Title="titleReport" 
    ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left" Height="590" Width="370" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">
    <Grid x:Name="LayoutRoot" Background="Transparent" DataContext="{Binding}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Name="gridCiudades" DataContext="{Binding}">

            <DatePicker x:Name="txtDesde" HorizontalAlignment="Left" Height="25"  Margin="10,57,0,0" VerticalAlignment="Top" Width="323" TabIndex="0"/>
            <ComboBox x:Name="cmbSucursales" SelectedValue="{Binding Path=SucursalID, Mode=OneWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="10,169,20,0" VerticalAlignment="Top" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,32,0,0"  Text="lblFrom" VerticalAlignment="Top" Width="155" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,144,0,0"  Text="lblSucursal" VerticalAlignment="Top" Width="155" />
            <DatePicker x:Name="txtHasta" HorizontalAlignment="Left" Height="25"  Margin="10,113,0,0" VerticalAlignment="Top" Width="323" TabIndex="1"/>
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,88,0,0"  Text="lblTo" VerticalAlignment="Top" Width="155" />
            <ComboBox x:Name="cmbCajeros" SelectedValue="{Binding Documento, Mode=OneWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="10,225,20,0" VerticalAlignment="Top" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,200,0,0"  Text="lblCashier" VerticalAlignment="Top" Width="304" />
            <RadioButton x:Name="lblSummary" Content="lblSummary" IsChecked="True" GroupName="report" HorizontalAlignment="Left" Margin="12,372,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="lblDetail" Content="lblDetail" GroupName="report" HorizontalAlignment="Left" Margin="132,372,0,0" VerticalAlignment="Top"/>
            <ComboBox x:Name="cmbRutas" SelectedValue="{Binding RutaID, Mode=OneWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="10,281,20,0" VerticalAlignment="Top" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,256,0,0"  Text="lblRoad" VerticalAlignment="Top" Width="304" />
            <CheckBox x:Name="chkEliminados" Content="¿Solo recibos nulos o eliminados?" HorizontalAlignment="Left" Margin="12,400,0,0" Width="220" Height="29" VerticalAlignment="Top"/>
            <CheckBox x:Name="chkSaldos" Content="¿Solo recibos de saldo?" HorizontalAlignment="Left" Margin="12,429,0,0" Width="220" Height="29" VerticalAlignment="Top"/>
            <ComboBox x:Name="cmbFormaPagos" SelectedValue="{Binding FormaPagoID, Mode=OneWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="10,337,20,0" VerticalAlignment="Top" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,312,0,0"  Text="lblMethodofPayment" VerticalAlignment="Top" Width="304" />

        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1" Width="110">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="True">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
