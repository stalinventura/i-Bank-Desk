<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Formularios.frmEntradas" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Title="titleJournalEntries" ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left"  Height="650" Width="852" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">
    <Grid x:Name="LayoutRoot" Background="Transparent" DataContext="{Binding}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <Grid Name="gridProducto" DataContext="{Binding}" Grid.Row="0" Grid.Column="1" Width="Auto" Background="Transparent" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="134" />
                <RowDefinition Height="84" />
                <RowDefinition/>
                <RowDefinition Height="auto" MinHeight="50" />
            </Grid.RowDefinitions>


            <DataGrid AutoGenerateColumns="False" Margin="10,0,10,0" Name="dataGrid1" Grid.Row="2" HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden" CanUserAddRows="False" CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="colCode" Width="100" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Auxiliares.Codigo, StringFormat=000}" Margin="0,0,0,0" TextAlignment="Left" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="colAuxiliary" x:Name="colAuxiliary" Width="200*" Binding="{Binding Path=Auxiliares.Auxiliar, Mode=TwoWay}" IsReadOnly="True" />

                    <DataGridTextColumn Header="colDocument" x:Name="colDocument" Width="110" Binding="{Binding Path=TipoEntradas.TipoEntrada, Mode=TwoWay}" IsReadOnly="True" />

                    <DataGridTextColumn Header="colNumber" x:Name="colNumber" Width="80" Binding="{Binding Path=Numero, Mode=TwoWay}" IsReadOnly="True" />

                    <DataGridTemplateColumn Header="colDebit" Width="90" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Debito,StringFormat=N2}" Margin="0,0,5,0" TextAlignment="Right" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="colCredit" Width="90" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Credito,StringFormat=N2}" Margin="0,0,5,0" TextAlignment="Right" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="colStatus" Width="80" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Entradas.EstadoID}" Margin="30,0,0,0" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>



            <Grid Margin="0,0,10,5" Grid.Row="3" DataContext="{Binding}" Width="Auto" Name="gridOpciones" Height="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*"/>
                    <ColumnDefinition Width="35*"/>
                </Grid.ColumnDefinitions>
                <Grid Margin="10,0,0,0" Name="gridInformacion" DataContext="{Binding}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,10,0" Grid.Column="0" VerticalAlignment="Top" Height="55" Grid.Row="1">
                        <Button Height="55" Margin="0" Name="btnAceptar" Width="55">
                            <Image Width="40" Height="40" Source="/Images/check.png" />
                        </Button>
                        <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                            <Image Width="40" Height="40" Source="/Images/back.png" />
                        </Button>
                    </StackPanel>
                </Grid>


            </Grid>

            <Grid Margin="0" Name="gridEncabezado" DataContext="{Binding}">
                <TextBox x:Name="txtReferencia" Text="{Binding Referencia, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Grid.Row="0" HorizontalAlignment="Left" Height="25" Margin="110,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" TabIndex="8" FontSize="14" IsReadOnly="False"/>
                <TextBox x:Name="txtConcepto" Text="{Binding Concepto, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Grid.Row="0" Height="54" Margin="110,81,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="9" FontSize="14" IsReadOnly="False"/>

                <ComboBox x:Name="cmbTipoMovimientos" SelectedValue="{Binding TipoMovimientoID, Mode=OneWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left"  Margin="110,19,0,0" VerticalAlignment="Top" Height="25" TabIndex="3" Width="234"/>
                <DatePicker x:Name="txtFecha" Grid.Row="0" SelectedDate="{Binding Fecha, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Right" Height="25" Margin="0,45,10,0" VerticalAlignment="Top" Width="150" TabIndex="22" FontSize="14"/>
                <TextBlock Text="lblConcept" Grid.Row="0" HorizontalAlignment="Left" Margin="14,83,0,0" TextAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Top" Width="87"/>
                <TextBlock Text="lblReference" Grid.Row="0" HorizontalAlignment="Left" Margin="14,55,0,0" TextAlignment="Right" TextWrapping="Wrap"  VerticalAlignment="Top" Width="87"/>
                <TextBlock HorizontalAlignment="Right" Height="25" Grid.Row="0" Margin="0,48,168,0" TextWrapping="Wrap" TextAlignment="Right" Text="lblDate" VerticalAlignment="Top" Width="128"/>
                <TextBlock Margin="0,24,0,0" Grid.Row="0"  TextWrapping="Wrap" TextAlignment="Right" Text="lblMovementType" VerticalAlignment="Top" HorizontalAlignment="Left" Width="101"/>
            </Grid>
            <Grid Margin="0" Grid.Row="1" Name="gridDetalleEntradas" DataContext="{Binding}">
                <TextBox x:Name="txtCodigo" HorizontalAlignment="Left" Height="25" Margin="10,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="98" TabIndex="10" FontSize="14"/>
                <TextBox x:Name="txtAuxiliar" HorizontalAlignment="Left" Height="25" Margin="110,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="422" TabIndex="10" FontSize="14" IsEnabled="False"/>
                <TextBox x:Name="txtDebito" HorizontalAlignment="Left" Height="25" Margin="537,38,0,0" TextWrapping="Wrap" TextAlignment="Right" VerticalAlignment="Top" Width="90" TabIndex="10" FontSize="14"/>
                <TextBox x:Name="txtCredito" HorizontalAlignment="Left" Height="25" Margin="630,38,0,0" TextWrapping="Wrap" TextAlignment="Right" VerticalAlignment="Top" Width="90" TabIndex="10" FontSize="14" IsReadOnly="False"/>


                <TextBlock Text="lblAuxiliary" HorizontalAlignment="Left" Margin="113,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="153" Height="20"/>
                <TextBlock Text="lblCode" HorizontalAlignment="Left" Margin="10,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="64" Height="20"/>
                <TextBlock Text="lblDebit" HorizontalAlignment="Left" Margin="545,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="79" Height="20"/>
                <TextBlock Text="lblCredit" HorizontalAlignment="Left" Margin="632,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="79" Height="20"/>

                <Button x:Name="btnAdd" HorizontalAlignment="Left" Margin="725,30,0,14" Width="40" Height="40" TabIndex="37">
                    <Image Width="30" Height="30" Source="/Images/download.png" />
                </Button>
                <Button x:Name="btnDelete" HorizontalAlignment="Left" Margin="761,30,0,14" Width="40" Height="40" TabIndex="37">
                    <Image Width="30" Height="30" Source="/Images/delete.png" />
                </Button>

                <Separator Height="19" Margin="10,0,10,0" VerticalAlignment="Top" Grid.Row="1" Background="{StaticResource BackgroundHeader}"/>
                <Separator Height="19" Margin="10,0,10,0" VerticalAlignment="Bottom" Grid.Row="1" Background="{StaticResource BackgroundHeader}"/>

            </Grid>
            <TextBlock Text="0.00" Name="lblTotalCredito"  FontWeight="Bold" HorizontalAlignment="Right" TextAlignment="Right" Margin="0,0,100,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90" Height="20" Grid.Row="3"/>
            <TextBlock Text="0.00" Name="lblTotalDebito" FontWeight="Bold" HorizontalAlignment="Right" TextAlignment="Right" Margin="0,0,200,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90" Height="20" Grid.Row="3"/>
            <TextBlock  x:Name="lblMessage" FontWeight="Bold" FontSize="14" Foreground="Red" HorizontalAlignment="Right" TextAlignment="Center" Margin="0,0,10,10" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="305" Height="20" Grid.Row="3"/>

        </Grid>
        <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="True">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>-->
    </Grid>
</Controls:MetroWindow>

