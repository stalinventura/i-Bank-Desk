<Window x:Class="Payment.Bank.View.Formularios.frmCierres" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="titleCloseBox" 
    Height="768" Width="1024" WindowStyle="None" AllowsTransparency="True" BorderThickness="1" BorderBrush="{StaticResource BackgroundHeader}" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"  ShowInTaskbar="False">

    <Grid x:Name="LayoutRoot" Background="Transparent" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <Rectangle Fill="{StaticResource BackgroundHeader}" Grid.Row="0" Grid.ColumnSpan="3" Stroke="Black" Margin="-2,-2,-2,-2"/>

        <Grid Grid.Column="1" Grid.Row="1" Margin="5,10,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="5,5,15,5" BorderBrush="LightGray" BorderThickness="1">
                <Grid x:Name="gridHeader" Margin="0,10">
                    <ComboBox Margin="10,27,659,0" Height="30" x:Name="cmbCajas" SelectedValue="{Binding Documento, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  VerticalAlignment="Top" />
                    <TextBlock Height="23" HorizontalAlignment="Left" Margin="10,4,0,0" Text="lblCashier" VerticalAlignment="Top" Width="145" />
                    <DatePicker x:Name="txtFecha" Grid.Row="0" HorizontalAlignment="Right" Height="30" Margin="0,27,10,0" VerticalAlignment="Top" Width="121" TabIndex="22" FontSize="14"/>
                    <TextBlock Height="23" TextAlignment="Right" Margin="0,4,10,0" Text="lblDate" VerticalAlignment="Top" HorizontalAlignment="Right" Width="155" />
                </Grid>
            </Border>

            <ScrollViewer Grid.Column="0" Grid.Row="1" Margin="5,0,0,0">
                <Grid Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <GroupBox x:Name="gbRecibos" Margin="0,5" Grid.Column="0" Grid.Row="0" Header="titleIncomeReceipt" Background="Transparent" BorderBrush="LightGray" FontWeight="Bold">
                        <Grid x:Name="gridRecibos" Margin="5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <DataGrid AutoGenerateColumns="False" Margin="0,0,0,0" Name="dtgRecibos" Grid.Row="0" HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden" CanUserAddRows="False" CanUserDeleteRows="False">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="titleMethodofPayment" Width="65*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=Nombre}" TextAlignment="Left" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="colAmount" Width="35*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=Monto, StringFormat=N2}" TextAlignment="Right" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Separator Height="2" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                            <TextBlock x:Name ="lblTotalRecibos" TextAlignment="Right" FontWeight="Bold" Grid.Row="2" Grid.Column="0"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox x:Name="gbDetalleRecibos" Margin="0,5" Grid.Column="0" Grid.Row="1" Header="titleDetailIncomeReceipt" Background="Transparent" BorderBrush="LightGray" FontWeight="Bold">
                        <Grid x:Name="gridDetalleRecibos" Margin="5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <DataGrid AutoGenerateColumns="False" Margin="0,0,0,0" Name="dtgDetalleRecibos" Grid.Row="0" HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden" CanUserAddRows="False" CanUserDeleteRows="False">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="lblConcept" Width="65*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=Concepto}" TextAlignment="Left" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="colAmount" Width="35*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=SubTotal, StringFormat=N2}" TextAlignment="Right" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Separator Height="2" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                            <TextBlock x:Name ="lblTotalDetalleRecibos" TextAlignment="Right" FontWeight="Bold" Grid.Row="2"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </ScrollViewer>

            <ScrollViewer Grid.Column="1" Grid.Row="1">
                <Grid Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <GroupBox x:Name="gbDenomination" Margin="0,5" Grid.Column="1" Grid.Row="0" Header="titleCashBreakdown" Background="Transparent" BorderBrush="LightGray" FontWeight="Bold">
                        <Grid x:Name="gridDenomination" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <DataGrid AutoGenerateColumns="False" Margin="0,0,0,0" Name="dtgDenominaciones" Grid.Row="0" HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden" CanUserAddRows="False" CanUserDeleteRows="False">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="colDenomination" x:Name="colDenomination" Width="38*" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=Denominacion,StringFormat=C}" TextAlignment="Left" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="colStock" x:Name="colStock" Width="31*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Path=Cantidad, UpdateSourceTrigger=PropertyChanged}" LostFocus="TextBox_LostFocus" TextAlignment="Right" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="colSubTotal" x:Name="colSubTotal" Width="31*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=SubTotal, StringFormat=N2}" TextAlignment="Right" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Separator Height="2" Margin="0,5,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                            <TextBlock x:Name ="lblTotalEfectivo" Text="{Binding TotalGeneral, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right" FontWeight="Bold" Grid.Row="2"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox x:Name="gbCashBalance" Margin="0,5" Grid.Row="2" Header="lblCashBalance" Background="Transparent" BorderBrush="LightGray" FontWeight="Bold">
                        <Grid Grid.Row="1" x:Name="gridCashBalance">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*"/>
                                <ColumnDefinition Width="50*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="lblInitialAmount:" FontWeight="Bold" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="0"/>
                            <TextBlock x:Name="lblMontoInicial" FontWeight="Bold" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="0"/>
                            <TextBlock Text="lblIncome:" FontWeight="Bold" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="1"/>
                            <TextBlock x:Name="lblIngresos" FontWeight="Bold" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1"/>
                            <TextBlock Text="lblCash:" FontWeight="Normal" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="2"/>
                            <TextBlock x:Name="lblEfectivo" FontWeight="Normal" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="2"/>
                            <TextBlock Text="lblCard:" FontWeight="Normal" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="3"/>
                            <TextBlock x:Name="lblTotalTarjetas" FontWeight="Normal" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="3"/>
                            <TextBlock Text="lblCheck:" FontWeight="Normal" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="4"/>
                            <TextBlock x:Name="lblTotalCheques" FontWeight="Normal" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="4"/>
                            <TextBlock Text="lblTransfer:" FontWeight="Normal" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="5"/>
                            <TextBlock x:Name="lblTotalTransferencias" FontWeight="Normal" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="5"/>

                            <TextBlock Text="lblExpenses:" FontWeight="Bold" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="6"/>
                            <TextBlock x:Name="lblegresos" FontWeight="Bold" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="6"/>
                            <TextBlock Text="lblGeneralBox:" FontWeight="Normal" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="7"/>
                            <TextBlock x:Name="lblTotalCajaGeneral" FontWeight="Normal" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="7"/>
                            <TextBlock Text="lblBank:" FontWeight="Normal" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="8"/>
                            <TextBlock x:Name="lblTotalBancos" FontWeight="Normal" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="8"/>

                            <TextBlock Text="lblCashCount:" FontWeight="Bold" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="9"/>
                            <TextBlock x:Name="lblArquero" FontWeight="Bold" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="9"/>

                            <TextBlock Text="lblSurplusBox:" x:Name="lblSurplusBox" FontWeight="Bold" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="10"/>
                            <TextBlock x:Name="lblSobrante" FontWeight="Bold" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="10"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </ScrollViewer>

            <ScrollViewer Grid.Column="2" Grid.Row="1">
                <Grid Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <GroupBox x:Name="gbPagoRentas" Margin="0,5" Grid.Column="2" Grid.Row="0" Header="titleIncomeRent" Background="Transparent" BorderBrush="LightGray" FontWeight="Bold">
                        <Grid x:Name="gridRentas" Grid.Column="2" Grid.Row="0" Margin="5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <DataGrid AutoGenerateColumns="False" Margin="0,0,0,0" Name="dtgPagoRentas" Grid.Row="0" HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden" CanUserAddRows="False" CanUserDeleteRows="False">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="titleMethodofPayment" Width="65*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=Nombre}" TextAlignment="Left" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="colAmount" Width="35*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=Monto, StringFormat=N2}" TextAlignment="Right" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Separator Height="2" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                            <TextBlock x:Name ="lblTotalPagoRentas" TextAlignment="Right" FontWeight="Bold" Grid.Row="2" Grid.Column="0"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox x:Name="gbContratos" Margin="0,5" Grid.Column="2" Grid.Row="1" Header="titleContract" Background="Transparent" BorderBrush="LightGray" FontWeight="Bold">
                        <Grid x:Name="gridContratos" Margin="5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <DataGrid AutoGenerateColumns="False" Grid.Row="0" Margin="0,0,0,0" Name="dtgContratos" HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden" CanUserAddRows="False" CanUserDeleteRows="False">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="titleMethodofPayment" Width="65*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=Nombre}" TextAlignment="Left" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="colAmount" Width="35*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=Monto, StringFormat=N2}" TextAlignment="Right" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Separator Height="2" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                            <TextBlock x:Name ="lblTotalContratos" TextAlignment="Right" FontWeight="Bold" Grid.Row="2"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </ScrollViewer>

        </Grid>

        <StackPanel Orientation="Horizontal" Name="spButton" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="2">
            <Button Height="55" Width="55" Margin="0" Name="btnAceptar"  IsDefault="True" TabIndex="36">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False" TabIndex="37">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="10,19,0,0" Grid.Column="1" TextWrapping="Wrap" Text="titleBoxClose" Foreground="White" FontSize="18" VerticalAlignment="Top" Width="297" Height="24"/>
    </Grid>
</Window>
