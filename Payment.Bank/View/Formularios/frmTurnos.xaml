<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Formularios.frmTurnos" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Title="titleShift" 
    ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left" Height="450" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Name="gridSms" DataContext="{Binding}">
            <ComboBox Margin="10,95,20,0" Height="30" Name="cmbCajas" SelectedValue="{Binding Path=CajaID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" />
            <TextBox Height="30" Margin="10,155,315,0" x:Name="txtMonto" Text="{Binding Monto, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" />
            <TextBox Margin="10,218,20,11" x:Name="txtObservaciones" MaxLength="500"  TextWrapping="WrapWithOverflow" Text="{Binding Comentario, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" />

            <TextBlock Margin="10,41,20,0" x:Name="txtCajero" Height="30" VerticalAlignment="Top" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="10,67,0,0" Text="lblBox" VerticalAlignment="Top" Width="155" />
            <TextBlock Height="22" HorizontalAlignment="Left" Margin="10,191,0,0"  Text="lblObservation" VerticalAlignment="Top" Width="155" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="10,19,0,0" Text="lblCashier" VerticalAlignment="Top" Width="155" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="10,132,0,0" Text="lblInitialAmount" VerticalAlignment="Top" Width="155" />
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1" Width="110">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="True">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
