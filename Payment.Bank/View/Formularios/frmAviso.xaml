<Window x:Class="Payment.Bank.View.Formularios.frmAviso" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Title="titleAplications" 
    Height="550" Width="700" WindowStyle="None" AllowsTransparency="True" BorderThickness="1" BorderBrush="{StaticResource BackgroundHeader}" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"  ShowInTaskbar="False">

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Rectangle Fill="{StaticResource BackgroundHeader}" Grid.Row="0" Grid.ColumnSpan="3" Stroke="Black" Margin="-2,-2,-2, -2"/>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="210"/>
            </Grid.RowDefinitions>
            <Grid Name="gridDatosPersonales" Margin="10,10,10,8" Grid.Row="0">
                <TextBlock HorizontalAlignment="Left" Margin="0,3,0,0" TextWrapping="Wrap" Text="msgTitle"  FontWeight="Normal" FontSize="18" Foreground="{StaticResource BackgroundHeader}" VerticalAlignment="Top" Width="238"/>
                <Separator Height="45" Margin="0,10,0,0" VerticalAlignment="Top"/>
                <TextBlock x:Name="lblMessage" HorizontalAlignment="Left" Margin="131,76,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="14"  Width="504" Height="92"/>
                <Image Height="138" Margin="10,52,535,210" x:Name="MessageIcon" Source="/Controles/Icon/Alert.png" Stretch="Uniform" VerticalAlignment="Center" />
                <TextBox x:Name="lblKey" HorizontalAlignment="Left" BorderBrush="Red" VerticalContentAlignment="Center" Margin="131,314,0,0" TextWrapping="Wrap" Text="" TextAlignment="Center" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"  Width="487" Height="44"/>
                <TextBlock x:Name="lblContador" HorizontalAlignment="Right" Margin="0,-1,10,0" TextWrapping="Wrap" Text="" TextAlignment="Right" VerticalAlignment="Top" FontSize="28" Foreground="Red" FontWeight="Bold"  Width="59" Height="44"/>
                <TextBlock Margin="165,173,10,208" TextWrapping="NoWrap" Text="Banco Popular    :  736618216" FontWeight="Bold" FontSize="14"/>
                <TextBlock Margin="165,197,10,181" TextWrapping="NoWrap" Text="Banco BHDLeón :  16019790027" FontWeight="Bold" FontSize="14"/>
                <TextBlock Margin="165,221,10,157" TextWrapping="NoWrap" Text="Banco Reservas  :  9600139602" FontWeight="Bold" FontSize="14"/>
                <TextBlock Margin="131,287,27,91" TextWrapping="NoWrap" Text="lblReference"/>
                <TextBlock Margin="165,243,10,135" TextWrapping="NoWrap" Text="Scotiabank          :  48510003586" FontWeight="Bold" FontSize="14"/>
            </Grid>

        </Grid>

        <StackPanel Orientation="Horizontal" Name="spButton" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="2">
            <Button Height="55" Width="55" Margin="0" Name="btnAceptar"  IsDefault="True" TabIndex="36">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False" TabIndex="37">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="10,19,0,0" Grid.Column="1" TextWrapping="Wrap" Text="titleShutdown" Foreground="White" FontSize="18" VerticalAlignment="Top" Width="297" Height="24"/>
    </Grid>
</Window>
