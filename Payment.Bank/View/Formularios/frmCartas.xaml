<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Formularios.frmCartas" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Title="titleLetter" 
    ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left" Height="430" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">
    <Grid x:Name="LayoutRoot" Background="Transparent" DataContext="{Binding}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Name="gridCartas" DataContext="{Binding}">
            <ComboBox x:Name="cmbTipoCartas" SelectedValue="{Binding Path=TipoCartaID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="10,60,20,0" VerticalAlignment="Top" TabIndex="0"/>
            <TextBox Height="25" Margin="10,116,234,0" Name="txtDesde" Text="{Binding Path=Desde, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" TabIndex="1" />
            <TextBox Height="25" Margin="10,172,234,0" x:Name="txtHasta" Text="{Binding Hasta, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" TabIndex="1" />
            <TextBox Height="25" Margin="10,228,169,0" x:Name="txtMonto" Text="{Binding Monto, StringFormat=N2, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" TabIndex="1" />
            
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,91,0,0"  Text="lblFrom" VerticalAlignment="Top" Width="155" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,35,0,0"  Text="lblTypeLetter" VerticalAlignment="Top" Width="155" />

            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,147,0,0"  Text="lblTo" VerticalAlignment="Top" Width="155" />
            
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,203,0,0"  Text="lblAmount" VerticalAlignment="Top" Width="155" />

        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1" Width="110">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="False" TabIndex="3">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False" TabIndex="5">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
