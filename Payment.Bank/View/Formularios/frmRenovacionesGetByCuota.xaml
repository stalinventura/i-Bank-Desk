<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Formularios.frmRenovacionesGetByCuota" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Title="titleReport" 
    ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left" Height="420" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">
    <Grid x:Name="LayoutRoot" Background="Transparent" DataContext="{Binding}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Name="gridCiudades" DataContext="{Binding}">
            <ComboBox x:Name="cmbSucursales" SelectedValue="{Binding Path=SucursalID, Mode=OneWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="10,62,20,0" VerticalAlignment="Top" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,37,0,0"  Text="lblSucursal" VerticalAlignment="Top" Width="155" />
            <ComboBox x:Name="cmbOficiales" SelectedValue="{Binding OficialID, Mode=OneWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="10,118,20,0" VerticalAlignment="Top" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,93,0,0"  Text="lblAccountingOfficeContract" VerticalAlignment="Top" Width="304" />
            <ComboBox x:Name="cmbRutas" SelectedValue="{Binding RutaID, Mode=OneWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="10,174,20,0" VerticalAlignment="Top" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,149,0,0"  Text="lblRoad" VerticalAlignment="Top" Width="304" />
            <ComboBox x:Name="cmbTiempos" SelectedValue="{Binding RutaID, Mode=OneWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="10,232,20,0" VerticalAlignment="Top" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,207,0,0"  Text="lblTiempo" VerticalAlignment="Top" Width="304" />

        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1" Width="110">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="True">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
