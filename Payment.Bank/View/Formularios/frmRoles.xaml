                    <Frame.Content>
                        <Grid Margin="0,0,-1,0" x:Name="gridViewAllApplications">
                            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="lblViewAllApplications" VerticalAlignment="Top" Width="332" Margin="10,10,0,0"/>
                            <RadioButton x:Name="rbViewAllApplications_Si" Content="Si" Margin="10,34,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" TabIndex="4"  GroupName="ViewAllApplications" RenderTransformOrigin="0.518,1.433"  />
                            <RadioButton x:Name="rbViewAllApplications_No" Content="No" Margin="59,34,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="True" TabIndex="5" GroupName="ViewAllApplications"  />
