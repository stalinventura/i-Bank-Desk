                    </Frame.Content>
                </Frame>

                <Frame BorderBrush="LightGray" BorderThickness="0.5" HorizontalAlignment="Left" Height="67" Margin="10,829,0,0" VerticalAlignment="Top" Width="375">
                    <Frame.Content>
                        <Grid Margin="0,0,-1,0" x:Name="gridViewAllExpenditure">
                            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="lblViewAllExpenditure" VerticalAlignment="Top" Width="332" Margin="10,10,0,0"/>
                            <RadioButton x:Name="rbViewAllExpenditure_Si" Content="Si" Margin="10,34,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" TabIndex="4"  GroupName="ViewAllExpenditure" RenderTransformOrigin="0.518,1.433"  />
                            <RadioButton x:Name="rbViewAllExpenditure_No" Content="No" Margin="59,34,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="True" TabIndex="5" GroupName="ViewAllExpenditure"  />
                        </Grid>
                    </Frame.Content>
                </Frame>

            </Grid>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1" Width="110">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="True">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
