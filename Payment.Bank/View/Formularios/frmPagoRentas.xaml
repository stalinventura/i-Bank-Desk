<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Formularios.frmPagoRentas" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Title="titleIncomeReceipt" 
    ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left"  Width="852" Height="700" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Grid Name="gridMenu" Grid.Row="0" Grid.Column="1" Width="Auto" Background="Transparent" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="134" />
                <RowDefinition Height="84" />
                <RowDefinition/>
                <RowDefinition Height="auto" MinHeight="140" />
            </Grid.RowDefinitions>

            <DataGrid AutoGenerateColumns="False" Margin="10,0,10,0" Name="dataGrid1" Grid.Row="2" HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="colNumber" Width="85" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=RentaID, StringFormat=000}" Margin="0,0,0,0" TextAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="colConcept" x:Name="colConcept" Width="180*" Binding="{Binding Path=Concepto}" IsReadOnly="True" />


                    <DataGridTemplateColumn Header="colAmount" Width="120" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Monto,StringFormat=N2}" Margin="0,0,5,0" TextAlignment="Right" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>



            <Grid Margin="0,0,10,0" Grid.Row="3" Width="Auto" Name="gridOpciones" Height="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*"/>
                    <ColumnDefinition Width="35*"/>
                </Grid.ColumnDefinitions>

                <ComboBox HorizontalAlignment="Right" FontSize="12" Height="30" Name="cmbFormaPagos" Margin="0,10,0,0" VerticalAlignment="Top" Width="140" SelectedValue="{Binding FormaPagoID, Mode=OneWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Grid.Column="1"/>
                <TextBox x:Name="txtSubTotal" FontSize="14" HorizontalAlignment="Right" Height="30" Margin="0,43,0,0" TextWrapping="Wrap"  TextAlignment="Right" Text="{Binding Path=SubTotal,StringFormat=N2, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  VerticalAlignment="Top" Width="140" TabIndex="10" Grid.Column="1" IsReadOnly="True"/>
                <TextBox x:Name="txtDescuento" FontSize="14" HorizontalAlignment="Right" Height="30" Margin="0,76,0,0" TextWrapping="Wrap"  TextAlignment="Right" Text="{Binding Path=Descuento,StringFormat=N2, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  VerticalAlignment="Top" Width="140" TabIndex="10" Grid.Column="1"/>
                <TextBox x:Name="txtTotal" FontSize="14" HorizontalAlignment="Right" Height="30" Margin="0,109,0,0" TextWrapping="Wrap" TextAlignment="Right" FontWeight="Bold"  Text="{Binding Path=Monto,StringFormat=N2, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  VerticalAlignment="Top" Width="140" TabIndex="10" Grid.Column="1" IsReadOnly="True"/>

                <TextBlock HorizontalAlignment="Right" Margin="0,17,149,0" TextWrapping="Wrap" TextAlignment="Right" Text="lblMethodofPayment" VerticalAlignment="Top" Width="156" FontWeight="Bold" Grid.ColumnSpan="2" Height="23"/>
                <TextBlock HorizontalAlignment="Right" Margin="0,50,149,0" TextWrapping="Wrap" TextAlignment="Right" Text="lblSubTotal" VerticalAlignment="Top" Width="156" FontWeight="Bold" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Right" Margin="0,83,149,0" TextWrapping="Wrap" TextAlignment="Right" Text="lblDescuento" VerticalAlignment="Top" Width="156" FontWeight="Bold" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Right" Margin="0,116,149,0" TextWrapping="Wrap" TextAlignment="Right" Text="lblTotal" VerticalAlignment="Top" Width="156" FontWeight="Bold" Grid.ColumnSpan="2"/>
                <Grid Grid.Column="0" Name="gridInformacion">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Expander Margin="10,10,10,0" Grid.Row="0" IsExpanded="True" Background ="{DynamicResource BackgroundHeader}" BorderBrush="{StaticResource BackgroundHeader}">
                        <Expander.Header>
                            lblInformation
                        </Expander.Header>
                        <Grid>
                            <TextBox Margin="0" Name="txtInformacion" Height="80" BorderBrush="Transparent"/>
                        </Grid>
                    </Expander>
                    <CheckBox x:Name="chkPreview" Content="lblPreview" IsChecked="True" VerticalAlignment="Top" Grid.Column="0" Margin="10,0,0,0" Grid.Row="1" />
                </Grid>
            </Grid>

            <Grid Margin="0" Name="gridEncabezado">
                <TextBox x:Name="txtAlquiler" Grid.Row="0" HorizontalAlignment="Left" Height="30" Margin="229,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" TabIndex="10" FontSize="14"/>
                <TextBox x:Name="txtNombres" Text="{Binding Path=Personas.Nombres, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Grid.Row="0"  HorizontalAlignment="Left" Height="30" Margin="229,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="227" IsReadOnly="True"/>
                <TextBox x:Name="txtApellidos" Text="{Binding Path=Personas.Apellidos, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Grid.Row="0" HorizontalAlignment="Left" Margin="229,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="227" IsReadOnly="True"/>
                <TextBox x:Name="txtCiudades" Text="{Binding Path=Personas.Ciudades.Ciudad, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Grid.Row="0" HorizontalAlignment="Left" Margin="229,126,0,-2" VerticalAlignment="Top" Width="227" Height="30" IsReadOnly="True"/>
                <ComboBox HorizontalAlignment="Right" FontSize="12" Height="30" x:Name="cmbComprobantes" BorderBrush="Transparent" Margin="0,124,0,0" VerticalAlignment="Top" Width="124" SelectedValue="{Binding ComprobanteID, Mode=OneWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"/>
                <DatePicker x:Name="txtFecha" Grid.Row="0" HorizontalAlignment="Left" Height="30" Margin="333,23,0,0" VerticalAlignment="Top" Width="123" TabIndex="22" FontSize="14"/>

                <TextBlock  Margin="0,69,18,0" Text="{Binding Path=Fecha,StringFormat=dd/MM/yyyy, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Grid.Row="0"  Name="lblFecha" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" TextAlignment="Right" Width="107" Height="25"/>
                <TextBlock  Margin="0,97,19,0" Text="{Binding Path=Monto,StringFormat=N2, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  Grid.Row="0"  Name="lblMonto" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" TextAlignment="Right" Width="107" Height="25"/>
                <TextBlock Text="lblLastName" Grid.Row="0" HorizontalAlignment="Left" Margin="121,95,0,0" TextAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Top" Width="96"/>
                <TextBlock Text="lblNames" Grid.Row="0" HorizontalAlignment="Left" Margin="121,62,0,0" TextAlignment="Right" TextWrapping="Wrap"  VerticalAlignment="Top" Width="96" />
                <TextBlock Text="lblCiudad" Grid.Row="0" HorizontalAlignment="Left" TextAlignment="Right" Margin="121,130,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="96"/>
                <TextBlock HorizontalAlignment="Right" Grid.Row="0" Margin="0,69,130,0" TextWrapping="Wrap" TextAlignment="Right" Text="lblDateOfContract" VerticalAlignment="Top" Width="153" Height="25"/>
                <TextBlock HorizontalAlignment="Right" Grid.Row="0" Margin="0,97,131,0" TextWrapping="Wrap" TextAlignment="Right" Text="lblMonto" VerticalAlignment="Top" Width="153" Height="25"/>
                <TextBlock Margin="0,129,132,0" TextWrapping="Wrap" Grid.Row="0" Text="lblVoucher" TextAlignment="Right" VerticalAlignment="Top" HorizontalAlignment="Right" Width="153" Height="25"/>
                <TextBlock Margin="98,28,0,0" Grid.Row="0"  TextWrapping="Wrap" TextAlignment="Right" Text="lblContract" VerticalAlignment="Top" HorizontalAlignment="Left" Width="119"/>
                <Border Background="Transparent" BorderBrush="black" BorderThickness="1" CornerRadius="5,5,5,5" HorizontalAlignment="Left" Margin="10,23,0,0" x:Name="BorderPhotoSrc" Width="120" Height=" 120" VerticalAlignment="Top">
                    <Grid x:Name="gridPhotoSrc">
                        <Image DataContext="{Binding}" Margin="2,2,2,2" x:Name="photoUsuario" Source="{Binding Path=Solicitudes.Clientes.Personas.Fotografias.Foto}">
                            <Image.Effect>
                                <DropShadowEffect BlurRadius="10" Color="#FF5D7183" Opacity="0.5" ShadowDepth="0" />
                            </Image.Effect>
                        </Image>
                    </Grid>
                </Border>


            </Grid>

            <Grid Margin="0" Grid.Row="1" Name="gridDetalleCuotas">

                <TextBox x:Name="txtCuota"  HorizontalAlignment="Left" Height="30" Margin="10,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84" TabIndex="10" FontSize="14"/>
                <TextBox x:Name="txtConcepto" HorizontalAlignment="Left" Height="30" Margin="99,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="521" TabIndex="10" FontSize="14"/>
                <TextBox x:Name="txtLegal" HorizontalAlignment="Left" Height="30" Margin="625,37,0,0" TextWrapping="Wrap" TextAlignment="Right" VerticalAlignment="Top" Width="79" TabIndex="10" FontSize="14"/>



                <TextBlock Text="colConcept" HorizontalAlignment="Left" Margin="103,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163" Height="20"/>
                <TextBlock Text="colNumber" HorizontalAlignment="Left" Margin="10,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="64" Height="20"/>
                <TextBlock Text="colLegal" HorizontalAlignment="Left" Margin="625,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="107" Height="20"/>

                <Button x:Name="btnAdd" HorizontalAlignment="Left" Margin="714,30,0,14" Width="40" Height="40" TabIndex="37"  Grid.Row="1">
                    <Image Width="30" Height="30" Source="/Images/download.png" />
                </Button>
                <Button x:Name="btnDelete" HorizontalAlignment="Left" Margin="750,30,0,14" Width="40" Height="40" TabIndex="37"  Grid.Row="1">
                    <Image Width="30" Height="30" Source="/Images/delete.png" />
                </Button>

                <Separator Height="19" Margin="10,0,10,0" VerticalAlignment="Top" Grid.Row="1" Background="{StaticResource BackgroundHeader}"/>
                <Separator Height="19" Margin="10,0,10,0" VerticalAlignment="Bottom" Grid.Row="1" Background="{StaticResource BackgroundHeader}"/>

            </Grid>

        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="False">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
