<Window x:Class="Payment.Bank.View.Formularios.frmEmpleados" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" xmlns:local="clr-namespace:Payment.Bank.Helpers" Title="titleLawyers" 
    Height="600" Width="720" WindowStyle="None" AllowsTransparency="True" BorderThickness="1" BorderBrush="{StaticResource BackgroundHeader}" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"  ShowInTaskbar="False">

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.Resources>
            <local:ImageSourceConverter x:Key="ImageSourceConverter" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Rectangle Fill="{StaticResource BackgroundHeader}" Grid.Row="0" Grid.ColumnSpan="3" Stroke="Black" Margin="-2,-2,-2, -2"/>
        <Controls:ProgressRing Name="RadBusyIndicator" IsActive="False" Grid.Column="1" Foreground="{DynamicResource BackgroundHeader}"/>
        <ScrollViewer HorizontalContentAlignment="Right" Margin="0,0,-15,0" Grid.Column="1" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto" MinHeight="210"/>
                    <RowDefinition Height="Auto" MinHeight="300"/>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Name="gridDatosPersonales" Margin="10,10,10,8" Grid.Row="0">
                    <TextBox x:Name="txtDocumento" Text="{Binding Documento, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  HorizontalAlignment="Left" Height="25" Margin="7,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" TabIndex="5"/>
                    <TextBox x:Name="txtNombres"  Text="{Binding Nombres, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  HorizontalAlignment="Left" Height="25" Margin="7,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" TabIndex="7"/>
                    <TextBox x:Name="txtApellidos" Text="{Binding Apellidos, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Height="25" Margin="217,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" TabIndex="8"/>
                    <TextBox x:Name="txtApodo" HorizontalAlignment="Left" Height="25" Margin="5,201,0,0" TextWrapping="Wrap" Text="{Binding Apodo, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" Width="203" TabIndex="9"/>
                    <TextBox x:Name="txtCorreoElectronico" Text="{Binding Correo, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Height="25" Margin="217,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="416" TabIndex="10"/>
                    <ComboBox x:Name="cmbCiudades" SelectedValue="{Binding CiudadID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Margin="6,261,0,0" VerticalAlignment="Top" Width="202" Height="25" TabIndex="11"/>
                    <TextBox x:Name="txtDireccion" Text="{Binding Direccion, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Height="50" Margin="217,261,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" HorizontalAlignment="Left" Width="414" TabIndex="12"/>

                    <TextBox x:Name="txtTelefono"  Text="{Binding Telefono, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Height="25" Margin="5,341,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" TabIndex="13"/>
                    <TextBox x:Name="txtCelular"  Text="{Binding Celular, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Height="25" Margin="217,341,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="203" TabIndex="14"/>
                    <ComboBox x:Name="cmbOperadores" SelectedValue="{Binding OperadorID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left"  Margin="430,341,0,0" VerticalAlignment="Top" Width="203" Height="25" TabIndex="15"/>
                    <ComboBox x:Name="cmbSexos" SelectedValue="{Binding SexoID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Margin="5,401,0,0" VerticalAlignment="Top" Width="201" Height="25" TabIndex="16"/>
                    <ComboBox x:Name="cmbEstadosCiviles" SelectedValue="{Binding EstadoCivilID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Margin="215,401,0,0" VerticalAlignment="Top" Width="203" Height="25" TabIndex="17"/>


                    <Border Background="Transparent" DataContext="{Binding}" BorderBrush="{StaticResource BackgroundHeader}" BorderThickness="1" CornerRadius="2" Margin="512,61,0,0" Name="border2" Width="110" Height="130" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Grid Name="grid2">
                            <Image Margin="2" Name="srcPhoto" Stretch="Fill" Source="{Binding Fotografias.Foto, Mode=TwoWay, Converter={StaticResource ImageSourceConverter}}"/>
                        </Grid>
                    </Border>
                    <TextBlock Text="lblLastName" HorizontalAlignment="Left" Margin="219,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
                    <TextBlock Text="lblNames" HorizontalAlignment="Left" Margin="7,115,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="98"/>
                    <TextBlock HorizontalAlignment="Left" Margin="0,3,0,0" TextWrapping="Wrap" Text="SectionPersonalData"  FontWeight="Normal" FontSize="18" Foreground="{StaticResource BackgroundHeader}" VerticalAlignment="Top" Width="238"/>
                    <TextBlock Text="lblNick" HorizontalAlignment="Left" Margin="5,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163"/>
                    <Separator Height="45" Margin="0,10,0,0" VerticalAlignment="Top"/>
                    <TextBlock Text="lblEmail"  HorizontalAlignment="Left" Margin="217,176,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="148"/>
                    <TextBlock Text="lblPhone"  HorizontalAlignment="Left" Margin="5,316,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="102"/>
                    <TextBlock Text="lblCellular" HorizontalAlignment="Left" Margin="217,316,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="74"/>
                    <TextBlock Text="lblSex" HorizontalAlignment="Left" Margin="5,376,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="64"/>
                    <TextBlock Text="lblMaritalStatus" HorizontalAlignment="Left" Margin="217,376,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="102"/>
                    <TextBlock Text="lblOperator" Margin="430,316,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="201"/>
                    <TextBlock Text="lblDocument" HorizontalAlignment="Left" Margin="10,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="153"/>
                    <DatePicker x:Name="txtFechaNacimiento" SelectedDate="{Binding FechaNacimiento, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  HorizontalAlignment="Left" Height="25" Margin="219,82,0,0" VerticalAlignment="Top" Width="207" TabIndex="6"/>
                    <TextBlock Text="lblDateBirth" HorizontalAlignment="Left" Margin="219,56,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="158"/>
                    <TextBlock Text="lblCiudad" HorizontalAlignment="Left" Margin="7,236,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="169"/>
                    <TextBlock Text="lblAddress" HorizontalAlignment="Left" Margin="219,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94"/>
                    <Button x:Name="btnAdd_srcPhoto" HorizontalAlignment="Left" Margin="632,161,-1,0" VerticalAlignment="Top" Width="25" Height="25">
                        <Image Width="20" Height="20" Source="/Images/search.png" />
                    </Button>
                </Grid>
                <Grid Name="gridDatosEconomicos" Margin="10,10,10,10" Grid.Row="1">
                    <DatePicker x:Name="txtFechaIngreso" IsEnabled="False" SelectedDate="{Binding Fecha, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  HorizontalAlignment="Left" Height="25" Margin="120,76,0,0" VerticalAlignment="Top" Width="207" TabIndex="20"/>
                    <ComboBox x:Name="cmbInstituciones" SelectedValue="{Binding InstitucionID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" IsEnabled="False" HorizontalAlignment="Left" Height="25" Margin="334,76,0,0" VerticalAlignment="Top" Width="297" TabIndex="21"/>
                    <TextBox x:Name="txtDireccionTrabajo" Text="{Binding Instituciones.Direccion, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" IsEnabled="False" HorizontalAlignment="Left" Height="25" Margin="5,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" TabIndex="22"/>
                    <TextBox x:Name="txtTelefonoTrabajo" Text="{Binding Instituciones.Telefono, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  IsEnabled="False" HorizontalAlignment="Left" Height="25" Margin="218,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" TabIndex="23"/>

                    <ComboBox x:Name="cmbOcupaciones" SelectedValue="{Binding OcupacionID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" IsEnabled="False" HorizontalAlignment="Left" Margin="430,141,0,0" VerticalAlignment="Top" Width="201" Height="25" TabIndex="24"/>
                    <ComboBox x:Name="cmbHorarios" SelectedValue="{Binding HorarioID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  IsEnabled="False" HorizontalAlignment="Left" Margin="5,201,0,0" VerticalAlignment="Top" Width="201" Height="25" TabIndex="25"/>
                    <ComboBox x:Name="cmbIngresos" SelectedValue="{Binding IngresoID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"  IsEnabled="False" HorizontalAlignment="Left" Margin="218,201,0,0" VerticalAlignment="Top" Width="201" Height="25" TabIndex="26"/>
                    <RadioButton x:Name="rbSi" Content="Si" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" TabIndex="18" />
                    <RadioButton x:Name="rbNo" Content="No" HorizontalAlignment="Left" Margin="63,81,0,0" VerticalAlignment="Top" IsChecked="true" TabIndex="19"/>

                    <Separator Height="52" Margin="0,3,0,0" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="0,3,0,0" TextWrapping="Wrap" Text="SectionC"  FontWeight="Normal" FontSize="18" Foreground="{StaticResource BackgroundHeader}" VerticalAlignment="Top" Width="238"/>
                    <TextBlock HorizontalAlignment="Left" Margin="5,51,0,0" TextWrapping="Wrap" Text="lblWork"  VerticalAlignment="Top" Width="124"/>

                    <TextBlock HorizontalAlignment="Left" Margin="334,50,0,0" TextWrapping="Wrap" Text="lblWorkName" VerticalAlignment="Top" Width="255"/>
                    <TextBlock HorizontalAlignment="Left" Margin="7,116,0,0" TextWrapping="Wrap" Text="lblWorkAddress" VerticalAlignment="Top" Width="163"/>

                    <TextBlock HorizontalAlignment="Left" Margin="218,116,0,0" TextWrapping="Wrap" Text="lblWorkPhone"  VerticalAlignment="Top" Width="201"/>
                    <TextBlock HorizontalAlignment="Left" Margin="431,117,0,0" TextWrapping="Wrap" Text="lblOcupation" VerticalAlignment="Top" Width="158"/>
                    <TextBlock HorizontalAlignment="Left" Margin="7,177,0,0" TextWrapping="Wrap" Text="lblSchedule"  VerticalAlignment="Top" Width="163"/>
                    <TextBlock HorizontalAlignment="Left" Margin="218,176,0,0" TextWrapping="Wrap" Text="lblReceipts"  VerticalAlignment="Top" Width="155"/>
                    <TextBlock Text="lblAdmissionDate" HorizontalAlignment="Left" Margin="120,50,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="158"/>

                    <Button Width="25" Height="25" Margin="606,52,0,153" Name="btnAddBusiness" HorizontalAlignment="Left">
                        <Image x:Name="image1" Width="20" Height="20" Source="/Images/add.png">
                        </Image>
                    </Button>
                </Grid>
                <Grid Name="gridContactoEmergencia" Margin="10,10,10,0" Grid.Row="2" Height="280" VerticalAlignment="Top">
                    <DataGrid Name="dtgContactoEmergencias" AutoGenerateColumns="False" Height="173" Margin="5,52,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="625" TabIndex="37"  CanUserAddRows="False" CanUserDeleteRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="colReferenceType"  x:Name="colReferenceType"  Binding="{Binding Path=TipoReferencias.TipoReferencia}" IsReadOnly="True" Width="100*"/>
                            <DataGridTextColumn  x:Name="colNames" Header="colNames" Binding="{Binding Path=Referencia}" IsReadOnly="True" Width="180*" />
                            <DataGridTextColumn Header="colAddress"  x:Name="colAddress"  Binding="{Binding Path=Direccion}" IsReadOnly="True" Width="130*"/>
                            <DataGridTextColumn Header="colPhone"  x:Name="colPhone"  Binding="{Binding Path=Telefono}" IsReadOnly="True" Width="80*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Name="btnAdd" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top" Width="40" Height="40" TabIndex="26">
                        <Image Width="30" Height="30" Source="/Images/add.png" />
                    </Button>
                    <Button Name="btnEdit" HorizontalAlignment="Left" Margin="52,230,0,0" VerticalAlignment="Top" Width="40" Height="40" TabIndex="27">
                        <Image Width="30" Height="30" Source="/Images/edit.png" />
                    </Button>
                    <Button Name="btnDelete" HorizontalAlignment="Left" Margin="95,230,0,0" VerticalAlignment="Top" Width="40" Height="40" TabIndex="28">
                        <Image Width="30" Height="30" Source="/Images/delete.png" />
                    </Button>
                    <Separator Height="52" Margin="0,11,0,0" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="0,11,0,0" TextWrapping="Wrap" Text="SectionCommercialReferences" FontWeight="Normal" FontSize="18" Foreground="{StaticResource BackgroundHeader}" VerticalAlignment="Top" Width="594"/>
                </Grid>
                <Grid Name="gridDatosEmpleados" Margin="10,10,10,10" Grid.Row="3">
                    <ComboBox x:Name="cmbSucursales" SelectedValue="{Binding SucursalID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Margin="9,69,0,0" VerticalAlignment="Top" Width="202" Height="25" TabIndex="29"/>

                    <ComboBox x:Name="cmbPuestos" SelectedValue="{Binding PuestoID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Margin="8,129,0,0" VerticalAlignment="Top" Width="202" Height="25" TabIndex="29"/>

                    <TextBox x:Name="txtSuelto" Text="{Binding Sueldo, StringFormat=N2, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" IsEnabled="True" HorizontalAlignment="Left" Height="25" Margin="10,187,0,0" VerticalAlignment="Top" Width="201" TabIndex="35"/>

                    <TextBlock HorizontalAlignment="Left" Margin="0,3,0,0" TextWrapping="Wrap" Text="SectionEmployees"  FontWeight="Normal" FontSize="18" Foreground="{StaticResource BackgroundHeader}" VerticalAlignment="Top" Width="238"/>
                    <TextBlock Text="lblSucursal" HorizontalAlignment="Left" Margin="10,44,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="169"/>

                    <Separator Height="57" Margin="0,3,0,0" VerticalAlignment="Top"/>

                    <TextBlock HorizontalAlignment="Left" Margin="10,166,0,0" TextWrapping="Wrap" Text="lblSalary"  VerticalAlignment="Top" Width="201"/>

                    <TextBlock Text="lblJob" HorizontalAlignment="Left" Margin="10,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94"/>
                </Grid>
            </Grid>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="2">
            <Button Height="55" Width="55" Margin="0" Name="btnAceptar"  IsDefault="True" TabIndex="36">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False" TabIndex="37">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="10,19,0,0" Grid.Column="1" TextWrapping="Wrap" Text="titleEmployees" Foreground="White" FontSize="18" VerticalAlignment="Top" Width="297" Height="24"/>
    </Grid>
</Window>
