<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Formularios.frmBancos" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Title="titleBank" 
    ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left" Height="380" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">
    <Grid x:Name="LayoutRoot" Background="Transparent" DataContext="{Binding}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Name="gridBancos" DataContext="{Binding}">
            <TextBox Height="25" Margin="10,49,20,0" Name="txtBanco" Text="{Binding Path=Banco, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" TabIndex="1" />
            <ComboBox x:Name="cmbAuxiliares" SelectedValue="{Binding Path=AuxiliarID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="10,108,136,0" VerticalAlignment="Top" TabIndex="2"/>
            <ComboBox x:Name="cmbSucursales" SelectedValue="{Binding SucursalID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="10,167,136,0" VerticalAlignment="Top" TabIndex="2"/>
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,24,0,0" Text="lblBank" VerticalAlignment="Top" Width="155" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,83,0,0" Text="lblAuxiliary" VerticalAlignment="Top" Width="155" />

            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,142,0,0" Text="lblSucursal" VerticalAlignment="Top" Width="155" />
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1" Width="110">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="True">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
