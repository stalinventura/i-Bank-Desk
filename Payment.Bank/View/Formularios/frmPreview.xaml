<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Formularios.frmPreview" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
    ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left" Height="370" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">
    <Grid x:Name="LayoutRoot" Background="Transparent" DataContext="{Binding}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Name="gridTareas" DataContext="{Binding}">
            <Grid Name="gridControl">
                <Label FontFamily="Impact" FontSize="20" Foreground="#FFD0D0D0" HorizontalAlignment="Left" Margin="10,10,0,0" Name="lblPersonas" Width="144" Height="34" VerticalAlignment="Top" ContentStringFormat="" Content="PRINTER" />

                <Grid>
                    <RadioButton Content="Impresora" HorizontalAlignment="Left" Margin="81,63,0,0" Name="optImpresora" IsChecked="True" Height="30" VerticalAlignment="Top" Width="121" />
                    <RadioButton Content="Pantalla" Height="23" HorizontalAlignment="Left" IsChecked="False" Margin="81,98,0,0" Name="optPreview" VerticalAlignment="Top" Width="121" />
                    <Label Content="DESDE:" HorizontalContentAlignment="Right" Margin="7,177,0,0" Name="label1" Height="38" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" />
                    <Label Content="HASTA:" HorizontalContentAlignment="Right" Margin="113,177,0,0" Name="label2" HorizontalAlignment="Left" Width="57" Height="38" VerticalAlignment="Top" />
                    <TextBox CharacterCasing="Normal" Height="23" Language="es" Margin="78,178,0,0" MaxLength="20" Name="txtDesde" Text="1" HorizontalAlignment="Left" Width="30" VerticalAlignment="Top" />
                    <TextBox CharacterCasing="Normal" Height="23" Language="es" Margin="172,178,0,0" MaxLength="20" Name="txtHasta" Text="1" HorizontalAlignment="Left" Width="30" VerticalAlignment="Top" />
                    <Label Content="Copias:" HorizontalContentAlignment="Right" Margin="32,136,0,0" x:Name="label1_Copy" Height="38" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" />
                    <TextBox CharacterCasing="Normal" Height="23" Language="es" Margin="113,137,0,0" MaxLength="20" x:Name="txtCopias" Text="1" HorizontalAlignment="Left" Width="30" VerticalAlignment="Top" RenderTransformOrigin="0.581,-0.138" />
                </Grid>


            </Grid>

        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1" Width="110">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="False" TabIndex="3">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False" TabIndex="5">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
