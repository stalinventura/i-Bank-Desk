<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Formularios.frmTmpCheques" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
    ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left" Height="500" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Name="gridTmpCheques" DataContext="{Binding}">
            <TextBox Height="25" Margin="10,75,20,0" Name="txtNombres" Text="{Binding Path=Ruta, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,50,0,0"  Text="lblNames" VerticalAlignment="Top" Width="155" />
            <TextBox Height="84" Margin="10,131,20,0"  x:Name="txtConcepto" Text="{Binding Ruta, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,106,0,0"  Text="colConcept" VerticalAlignment="Top" Width="155" />
            <TextBox Height="25" Margin="10,245,433,0" x:Name="txtMonto" Text="{Binding Ruta, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,220,0,0"  Text="lblMonto" VerticalAlignment="Top" Width="155" />
            <DatePicker Name="txtFecha" HorizontalAlignment="Left" Margin="431,37,0,0" VerticalAlignment="Top" Width="127"/>
            <RadioButton x:Name="Popular" IsChecked="True" GroupName="CHEQUES" Content="Banco Popular" HorizontalAlignment="Left" Margin="186,0,0,89" Height="18" VerticalAlignment="Bottom"/>
            <RadioButton x:Name="Reservas" GroupName="CHEQUES" Content="Banco Reservas" HorizontalAlignment="Left" Margin="319,0,0,89" Height="18" VerticalAlignment="Bottom"/>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1" Width="110">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="True">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
