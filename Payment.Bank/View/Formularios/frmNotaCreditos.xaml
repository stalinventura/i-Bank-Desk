<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Formularios.frmDetalleNotaCreditos" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Title="titleCreditNote" 
    ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left" Height="580" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Name="gridNotas" DataContext="{Binding}">

            <TextBox Height="47" Margin="10,42,20,0" x:Name="txtConcepto" Text="{Binding Concepto, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" />
            <TextBox Height="25" Margin="10,119,0,0" IsReadOnly="True" x:Name="txtCapital" Text="{Binding Capital, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="155" />
            <TextBox Height="25" Margin="10,175,0,0" x:Name="txtComision" Text="{Binding Comision, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="155" />
            <TextBox Height="25" Margin="10,231,0,0" x:Name="txtInteres" Text="{Binding Interes, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="155" />
            <TextBox Height="25" Margin="10,287,0,0" x:Name="txtMoras" Text="{Binding Mora, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="155" />
            <TextBox Height="25" Margin="10,343,0,0" x:Name="txtLegal" Text="{Binding Legal, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="155" />
            <TextBox Height="25" Margin="10,399,0,0" x:Name="txtSeguro" Text="{Binding Seguro, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="155" />

            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,17,0,0"  Text="colConcept" VerticalAlignment="Top" Width="155" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,94,0,0"  Text="colCapital" VerticalAlignment="Top" Width="155" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,150,0,0"  Text="colComission" VerticalAlignment="Top" Width="155" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,206,0,0"  Text="colInterest" VerticalAlignment="Top" Width="155" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,262,0,0"  Text="colLateFees" VerticalAlignment="Top" Width="155" />
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,318,0,0"  Text="colLegal" VerticalAlignment="Top" Width="155" />           
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,374,0,0"  Text="colInsurance" VerticalAlignment="Top" Width="155" />
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1" Width="110">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="True">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
