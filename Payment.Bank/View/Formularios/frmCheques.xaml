<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Formularios.frmCheques" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Title="titleCheckBank" ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left"  Height="600" Width="720" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">
    <Grid x:Name="LayoutRoot" Background="Transparent" DataContext="{Binding}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <Grid Name="gridProducto" DataContext="{Binding}" Grid.Row="0" Grid.Column="1" Width="Auto" Background="Transparent" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="220" />
                <RowDefinition Height="30" />
                <RowDefinition/>
                <RowDefinition Height="auto" MinHeight="50" />
            </Grid.RowDefinitions>


            <DataGrid AutoGenerateColumns="False" Margin="10,0,10,0" Name="dataGrid1" Grid.Row="2" HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden" CanUserAddRows="False" CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="colCode" Width="100" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Auxiliares.Codigo, StringFormat=000}" Margin="0,0,0,0" TextAlignment="Left" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="colAuxiliary" x:Name="colAuxiliary" Width="100*" Binding="{Binding Path=Auxiliares.Auxiliar}" IsReadOnly="True" />

                    <DataGridTemplateColumn Header="colDebit" Width="90" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Debito,StringFormat=N2}" Margin="0,0,5,0" TextAlignment="Right" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="colCredit" Width="90" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Credito,StringFormat=N2}" Margin="0,0,5,0" TextAlignment="Right" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>



            <Grid Margin="0,0,10,5" Grid.Row="3" DataContext="{Binding}" Width="Auto" Name="gridOpciones" Height="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*"/>
                    <ColumnDefinition Width="35*"/>
                </Grid.ColumnDefinitions>
                <Grid Margin="10,0,0,0" Name="gridInformacion" DataContext="{Binding}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,10,0" Grid.Column="0" VerticalAlignment="Top" Height="55" Grid.Row="1">
                        <Button Height="55" Margin="0" Name="btnAceptar" Width="55" TabIndex="10">
                            <Image Width="40" Height="40" Source="/Images/check.png" />
                        </Button>
                        <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False" TabIndex="11">
                            <Image Width="40" Height="40" Source="/Images/back.png" />
                        </Button>
                    </StackPanel>
                </Grid>


            </Grid>

            <Grid Margin="0" Name="gridEncabezado" DataContext="{Binding}">
                <TextBox x:Name="txtNumero" Grid.Row="0" HorizontalAlignment="Left" Height="25" Margin="109,38,0,0" TextWrapping="Wrap" Width="133" TabIndex="0" FontSize="14" IsReadOnly="False" VerticalAlignment="Top"/>
                <TextBox x:Name="txtBeneficiario" Text="{Binding Beneficiario, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Grid.Row="0" HorizontalAlignment="Left" Height="25" Margin="109,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342" TabIndex="0" FontSize="14" IsReadOnly="True"/>
                <TextBox x:Name="txtConcepto" Text="{Binding Concepto, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Grid.Row="0" Height="54" Margin="109,100,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="2" FontSize="14" IsReadOnly="True"/>
                <DatePicker x:Name="txtFecha" IsEnabled="False" Grid.Row="0" SelectedDate="{Binding Fecha, Mode=OneWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" HorizontalAlignment="Right" Height="25" Margin="0,68,10,0" VerticalAlignment="Top" Width="150" TabIndex="1" FontSize="14"/>
                <ComboBox x:Name="cmbBancos" SelectedValue="{Binding BancoID, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="109,159,224,0" VerticalAlignment="Top" Height="25" TabIndex="3"/>
                <TextBox x:Name="txtMonto" Text="{Binding Monto, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Grid.Row="0" HorizontalAlignment="Left" Height="25" Margin="109,192,0,0" TextWrapping="Wrap" Width="133" TabIndex="4" FontSize="14" IsReadOnly="True" VerticalAlignment="Top"/>
                <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="14,103,0,0" TextAlignment="Right" TextWrapping="Wrap" Width="81" Text="lblConcept" Height="25" VerticalAlignment="Top"/>
                <TextBlock Text="lblBeneficiary" Grid.Row="0" HorizontalAlignment="Left" Margin="14,74,0,0" TextAlignment="Right" TextWrapping="Wrap"  VerticalAlignment="Top" Width="81"/>
                <TextBlock HorizontalAlignment="Right" Height="25" Grid.Row="0" Margin="0,71,168,0" TextWrapping="Wrap" TextAlignment="Right" Text="lblDate" VerticalAlignment="Top" Width="128"/>
                <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="14,161,0,0" TextAlignment="Right" TextWrapping="Wrap" Width="81" Text="lblBank" Height="25" VerticalAlignment="Top"/>
                <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="14,195,0,0" TextAlignment="Right" TextWrapping="Wrap" Width="81" Text="lblAmount" Height="25" VerticalAlignment="Top"/>

                <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="14,42,0,0" TextAlignment="Right" TextWrapping="Wrap" Width="81" Text="colNumber" Height="25" VerticalAlignment="Top"/>
            </Grid>
            <Grid Margin="0" Grid.Row="1" Name="gridDetalleEntradas" DataContext="{Binding}">
                <Separator Height="19" Margin="10,0,10,-9" VerticalAlignment="Bottom" Background="{StaticResource BackgroundHeader}"/>

            </Grid>
            <TextBlock Text="0.00" Name="lblTotalCredito"  FontWeight="Bold" HorizontalAlignment="Right" TextAlignment="Right" Margin="0,0,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90" Height="20" Grid.Row="3"/>
            <TextBlock Text="0.00" Name="lblTotalDebito" FontWeight="Bold" HorizontalAlignment="Right" TextAlignment="Right" Margin="0,0,110,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90" Height="20" Grid.Row="3"/>
            <TextBlock  x:Name="lblMessage" FontWeight="Bold" FontSize="14" Foreground="Red" HorizontalAlignment="Right" TextAlignment="Center" Margin="0,0,10,10" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="305" Height="20" Grid.Row="3"/>

        </Grid>
        <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="True">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>-->
    </Grid>
</Controls:MetroWindow>

