<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Consultas.frmPagosEmpresas" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Title="titleBusinessPayments" ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left" Height="700" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="98*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid Name="gridMenu" DataContext="{Binding}" Grid.Row="0" Width="Auto" Background="Transparent" Grid.Column="1" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Name="gridDatosPersonales"/>

            <DataGrid AutoGenerateColumns="False" Margin="0,10,0,31" Name="dataGrid1" Grid.Row="1" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" CanUserResizeRows="False" HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden" >
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="colNumber" Width="90" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=ContratoID, StringFormat=0000000}" Margin="0,0,5,0" TextAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="colDate" x:Name="colDate" Width="90" Binding="{Binding Path=Fecha, StringFormat=dd/MM/yyyy}" IsReadOnly="True" />
                    <DataGridTextColumn Header="colNames" x:Name="colNames" Width="*" Binding="{Binding Path=Completo}" IsReadOnly="True" />

                    <DataGridTemplateColumn Header="colAmount" Width="90" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Cuota,StringFormat=N2}" Margin="0,0,5,0" TextAlignment="Right" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="colDelay" Width="100" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Atraso,StringFormat=N2}" Margin="0,0,5,0" TextAlignment="Right" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="colBalance" Width="100" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Balance,StringFormat=N2}" Margin="0,0,5,0" TextAlignment="Right" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="colPaid" Width="100" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox x:Name="txtPagado" LostFocus="txtPagado_LostFocus" TextChanged="txtPagado_TextChanged" KeyDown="txtPagado_KeyDown" Text="{Binding Path=Balance,StringFormat=N2}" Margin="0,0,5,0" TextAlignment="Right" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock Foreground="{StaticResource BackgroundHeader}"  FontWeight="Bold" Name="lblTotal" Text="0.00" FontSize="14" TextAlignment="Right" HorizontalAlignment="Right" Width="200" Margin="0,0,10,0" Grid.Row="1" Height="26" VerticalAlignment="Bottom"/>
            <TextBlock Foreground="{StaticResource BackgroundHeader}" FontWeight="Bold" Name="lblCantidad" Text="TOTAL:" Grid.Row="1" HorizontalAlignment="Left" Width="200" Margin="12,0,0,0" Height="21" VerticalAlignment="Bottom" />
            <ComboBox x:Name="cmbSucursales" HorizontalAlignment="Right" Margin="0,26,0,0" Width="344" TabIndex="0"  Height="30" VerticalAlignment="Top"/>
            <ComboBox x:Name="cmbInstituciones" HorizontalAlignment="Right" Margin="0,61,0,0" Width="344" TabIndex="1"  Height="30" VerticalAlignment="Top"/>
            <DatePicker x:Name="txtHasta" HorizontalAlignment="Left" Height="25"  Margin="10,66,0,0" VerticalAlignment="Top" Width="304" TabIndex="1"/>
            <TextBlock Height="25" HorizontalAlignment="Left" Margin="10,41,0,0"  Text="lblTo" VerticalAlignment="Top" Width="155" />
            <Controls:ProgressRing Name="RadBusyIndicator" IsActive="False" Grid.Column="1" Grid.Row="2" Foreground="{DynamicResource BackgroundHeader}"/>
        </Grid>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="2">
            
            <Button Height="55"  Margin="0" Name="btnAceptar" Width="55" IsDefault="True">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Height="55"   Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>

    </Grid>
</Controls:MetroWindow>
