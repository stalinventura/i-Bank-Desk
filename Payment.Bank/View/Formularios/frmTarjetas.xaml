<Controls:MetroWindow TitleCaps="False" x:Class="Payment.Bank.View.Formularios.frmTarjetas" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" xmlns:local="clr-namespace:Payment.Bank.Helpers" Title="titlePaymentCard" 
    ShowTitleBar="True" TitlebarHeight="60" ShowIconOnTitleBar="True" TitleAlignment="Left" Height="500" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="1" ShowCloseButton="False" WindowTitleBrush="{StaticResource BackgroundHeader}" TitleForeground="White" GlowBrush="{DynamicResource BackgroundHeader}" ShowInTaskbar="False">

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.Resources>
            <local:ImageSourceConverter x:Key="ImageSourceConverter" />
            <local:DecryptConverter x:Key="DecryptConverter" />
            <local:CardNumberFormatConverter x:Key="CardNumberFormatConverter" />
            <local:CardNumberToImageConverter x:Key="CardConverter"
                   Amex="/i-Bank;component/Images/payment_amex.png" Dinners="/i-Bank;component/Images/payment_dinners.png" Discover="/i-Bank;component/Images/payment_discover.png" JCB="/i-Bank;component/Images/payment_jcb.png"
                                              MasterCard="/i-Bank;component/Images/payment_mastercard.png" Visa="/i-Bank;component/Images/payment_visa.png"
                                              NotRecognized="/i-Bank;component/Images/nocard.png"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Name="gridDatosTarjetas" Margin="0,20,0,0" DataContext="{Binding}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="30*"/>
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0">
                <StackPanel Margin="10,0">
                    <Border Width="350" Height="200" CornerRadius="5">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF2E2E2E" Offset="0"/>
                                <GradientStop Color="#FF3E3D3D" Offset="1"/>
                                <GradientStop Color="#FF3E3E3E" Offset="0.43"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Image Height="70" Width="70" Stretch="Fill" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Source="{Binding Numero,Converter={StaticResource CardConverter}}"/>
                            <Border CornerRadius="5" Height="35" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Background="#FF474747"/>
                            <Grid Width="200" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding Path=Numero, Mode=TwoWay, Converter={StaticResource CardNumberFormatConverter}}" Grid.ColumnSpan="4" FontFamily="OCR A Extended" FontSize="14" HorizontalAlignment="Center" Background="Transparent" Foreground="LightGray"/>
                            </Grid>
                            <Grid VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Margin="20" Grid.Column="0" Grid.ColumnSpan="2">
                                    <TextBlock Text="CARD HOLDER" FontSize="7" Foreground="LightGray" />
                                    <TextBlock x:Name="lblHolder"  FontSize="12" Foreground="LightGray" FontFamily="OCR A Extended" />
                                </StackPanel>
                                <StackPanel Margin="20" Grid.Column="1" HorizontalAlignment="Right">
                                    <TextBlock Text="EXPIRES" FontSize="7" Foreground="LightGray"/>
                                    <TextBlock x:Name="lblExpiresDate" FontSize="12" Foreground="LightGray" FontFamily="OCR A Extended">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0:00}/{1:00}" >
                                                <Binding Path="Mes"/>
                                                <Binding Path="Ano"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="0" Grid.Row="1" Margin="10">
                <Grid x:Name="gridTarjetas">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>


                    <TextBox Grid.Row="3" Grid.ColumnSpan="2" Height="25" MaxLength="16" x:Name="txtNumero" Text="{Binding Path=Numero, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"/>
                    <TextBox x:Name="txtCvv" Grid.Row="5" Grid.Column="1" Height="25" Text="{Binding Path=Cvv, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" MaxLength="3" Margin="2,0,0,0"/>


                    <TextBlock Text="lblCardNumber" Grid.Row="1"/>
                    <TextBlock Text="lblExpirationMonth" Grid.Row="4" HorizontalAlignment="Left" Width="65" TextAlignment="Left"/>
                    <TextBlock Text="lblExpirationYear" Grid.Row="4" HorizontalAlignment="Right" TextAlignment="Left" Width="92" Margin="0,4,4,3"/>

                    <StackPanel Grid.Row="5" Grid.Column="0" Orientation="Horizontal">
                        <ComboBox Grid.Row="5" Grid.Column="0" Height="25" Width="94" HorizontalAlignment="Left" x:Name="cmbExpirationMonth" SelectedValue="{Binding Path=Mes, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="2,0,2,0"/>
                        <ComboBox Grid.Row="5" Grid.Column="0" Height="25" Width="94" HorizontalAlignment="Right" x:Name="cmbExpirationYear" SelectedValue="{Binding Path=Ano, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Margin="2,0,2,0"/>
                    </StackPanel>

                    <TextBlock Text="lblCvv" Grid.Row="4" Grid.Column="1"/>
                </Grid>
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="1" Width="110">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="True">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
