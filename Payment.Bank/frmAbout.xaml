<Window x:Class="Payment.Bank.frmAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Payment.Bank"
        mc:Ignorable="d"
        Title="frmLogIn" Height="350" Width="300" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" WindowStyle="None" AllowsTransparency="True" BorderThickness="1" BorderBrush="{StaticResource BackgroundHeader}">
        <Grid Name="gridLogin">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <!--<Controls:ProgressRing IsActive="False" Name="RadBusyIndicator" Grid.Column="1" Grid.Row="1" Foreground="{DynamicResource BackgroundHeader}" Margin="10"/>-->
            <Rectangle Fill="{StaticResource BackgroundHeader}" Grid.ColumnSpan="3" Stroke="Black" Margin="-2,-2,-2, -2"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Column="1" TextWrapping="Wrap" Text="i-Bank" Foreground="White" FontSize="18" VerticalAlignment="Top" Width="122" Height="24"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="2" Width="110">
                <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="True">
                    <Image Width="40" Height="40" Source="/Images/check.png" />
                </Button>
                <Button Height="55" Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                    <Image Width="40" Height="40" Source="/Images/back.png" />
                </Button>
            </StackPanel>
        <Image x:Name="QrCodeImage" Stretch="Fill" Height="150" Width="150" Grid.Column="1" Margin="20" Grid.Row="1"/>
    </Grid>
</Window>
