<Window x:Class="Payment.Bank.frmLogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Payment.Bank"
        mc:Ignorable="d"
        Title="frmLogIn" Height="280" Width="566" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" WindowStyle="None" AllowsTransparency="True" BorderThickness="1" BorderBrush="{StaticResource BackgroundHeader}">
    <Grid Name="gridLogin">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Image Margin="20,5,0,16" Visibility="Visible" Height="180" Source="Images/logo/logo.png" Grid.Row="1" HorizontalAlignment="Left" Grid.ColumnSpan="2" />

        <TextBox x:Name="txtCorreo" Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="191,45,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <TextBlock x:Name="textBlock" Grid.Column="1" HorizontalAlignment="Left" Margin="191,24,0,0" Grid.Row="1" TextWrapping="Wrap" Text="lblEmail" VerticalAlignment="Top" Height="16" Width="300"/>
        <PasswordBox x:Name="txtClave" Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="191,97,0,0" Grid.Row="1" VerticalAlignment="Top" Width="186" Password=""/>
        <TextBlock x:Name="textBlock_Copy" Grid.Column="1" HorizontalAlignment="Left" Margin="191,76,0,0" Grid.Row="1" TextWrapping="Wrap" Text="lblPassword" VerticalAlignment="Top" Height="16" Width="67"/>
        <!--<Controls:ProgressRing IsActive="False" Name="RadBusyIndicator" Grid.Column="1" Grid.Row="1" Foreground="{DynamicResource BackgroundHeader}" Margin="10"/>-->
        <Rectangle Fill="{StaticResource BackgroundHeader}" Grid.ColumnSpan="3" Stroke="Black" Margin="-2,-2,-2, -2"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Column="1" TextWrapping="Wrap" Text="lblSignIn" Foreground="White" FontSize="18" VerticalAlignment="Top" Width="122" Height="24"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0" Grid.Column="1" VerticalAlignment="Top" Height="55" Grid.Row="2" Width="110">
            <Button Height="55" Margin="0" Name="btnAceptar" Width="55" IsDefault="True">
                <Image Width="40" Height="40" Source="/Images/check.png" />
            </Button>
            <Button Height="55" Margin="0" Name="btnSalir" Width="55" IsCancel="False">
                <Image Width="40" Height="40" Source="/Images/back.png" />
            </Button>
        </StackPanel>
        <TextBlock x:Name="lblMensaje" Grid.Column="1" HorizontalAlignment="Left" Margin="10,5,0,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="387" Height="65" FontSize="14" FontWeight="Bold" Foreground="#FFFF0404" TextAlignment="Center"/>
    </Grid>
</Window>
